<%- include('../../includes/header.ejs') %>
<body>
  <%- include('../../includes/navbar.ejs') %>
  <div class="container-fluid">
    <div class="row">
      <%- include('../../includes/sidebar.ejs') %>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
        >
          <h1 class="h2">Create Student</h1>

          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/student">Student</a></li>
              <li class="breadcrumb-item active" aria-current="page">Create</li>
            </ol>
          </nav>
        </div>

        <!-- START: Content -->
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <!-- START: Form -->
                  <form
                    action="/student"
                    method="post"
                    enctype="multipart/form-data"
                  >
                    <div class="mb-3">
                      <label for="name" class="form-label">Fullname</label>
                      <input
                        type="text"
                        class="form-control"
                        name="name"
                        id="name"
                        autocomplete="off"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="nisn" class="form-label">nisn</label>
                      <input
                        type="text"
                        class="form-control"
                        name="nisn"
                        id="nisn"
                        autocomplete="off"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="gender" class="form-label">Gender</label>
                      <select class="form-select" name="gender" id="gender">
                        <option selected>Choose</option>
                        <option value="man">Laki-laki</option>
                        <option value="woman">Perempuan</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="formFile" class="form-label">Upload</label>
                      <input
                        class="form-control"
                        type="file"
                        id="formFile"
                        name="image"
                        onchange="previewImage()"
                      />
                      <img
                        class="img-fluid img-preview d-none mt-3"
                        width="150"
                      />
                    </div>

                    <button type="submit" class="btn btn-dark w-100 rounded-1">
                      Create New Student
                    </button>
                  </form>
                  <!-- END: Form -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- END: Content -->
      </main>
    </div>
  </div>
  <%- include('../../includes/footer.ejs') %>
  <script>
    function previewImage() {
      const formFile = document.getElementById("formFile");
      const imgPreview = document.querySelector(".img-preview");

      const oFReader = new FileReader();
      oFReader.readAsDataURL(formFile.files[0]);

      oFReader.onload = function (oFREvent) {
        imgPreview.classList.remove("d-none");
        imgPreview.src = oFREvent.target.result;
      };
    }
  </script>
</body>
